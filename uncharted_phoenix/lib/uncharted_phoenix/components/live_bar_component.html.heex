<figure data-testid="lc-live-bar-component" role="img" aria-label={"Bar chart visualizing #{Chart.title(@chart)}"} alt={"Bar chart visualizing #{Chart.title(@chart)}"} tabindex="0"  phx-target={@myself} phx-focus="show_table">
  <%= if Enum.count(@chart.dataset.sections) > 1 do %>
    <svg data-testid="lc-color-key" id={"#{svg_id(@chart, "chart")}-color_key"} class="color-key" width="100%" height="100%" viewBox={"0 0 #{@width} 50"}>
       <.color_key chart={@chart} />
    </svg>
  <% end %>
  <svg class="bar-chart" width="100%" height="100%" viewBox={"0 0 #{@width} #{@height}"} style="overflow: visible;">

    <title id="barChartTitle">Bar chart visualizing <%= Chart.title(@chart) %></title>

    <.color_defs chart={@chart} />
    <.bar_labels chart={@chart} />
    <.bar_grid_line_labels chart={@chart} grid_lines={@grid_lines} offsetter={@offsetter} />
    <svg class="" width="90%" height="92%" x="10%" y="0">
      <%= if @chart.dataset.axes.show_gridlines do %>
        <.bar_grid_lines chart={@chart} grid_lines={@grid_lines} offsetter={@offsetter} axis={@axis} /> 
      <% end %>
      <.bars chart={@chart} bards={@bars} /> 
    </svg>
  </svg>
</figure>

<%= Phoenix.HTML.tag :table, [tabindex: "0", phx_target: @myself, phx_blur: "hide_table"] ++ maybe_show_table(@always_show_table || @show_table) do %>
  <caption><%= Chart.title(@chart) %></caption>
  <thead>
    <tr>
      <th scope="col">[Data Title]</th>
      <th scope="col">[Data Title]</th>
      <%= if (Enum.count(@chart.dataset.sections) > 1) do %>
        <th scope="col" colspan="2">[Data Title]</th>
      <% end %>
    </tr>
  </thead>
  <%= for bar <- @bars do %>
    <tr>
      <th scope="row"><%= bar.label %></th>
      <td><%= bar.full_bar_value %></td>
      <%= if (Enum.count(bar.sections) > 1) do %>
        <td>
          <table>
            <thead>
              <th scope="col">[Data Title]</th>
              <th scope="col">[Data Title]</th>
            </thead>
            <tbody>
              <%= for (section <- bar.sections) do %>
                <tr>
                  <th scope="row"><%= section.label %></th>
                  <td><%= section.bar_value %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </td>
      <% end %>
    </tr>
  <% end %>
<% end %>
